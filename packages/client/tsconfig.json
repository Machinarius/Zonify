{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2020",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2020"],
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
  "typeAcquisition": {
    "enable": true,
    "include": ["./src/assets.d.ts"]
  }
}